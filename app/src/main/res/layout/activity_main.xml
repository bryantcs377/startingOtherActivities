<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs377.startingotheractivities.MainActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userInput"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:layout_centerHorizontal="true"
        android:text="enter here" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:id="@+id/btnFirst"
        android:layout_below="@+id/userInput"
        android:layout_centerHorizontal="true"
        android:onClick="sendSMS" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/btnMap"
        android:layout_below="@+id/btnFirst"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:onClick="openMap"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web"
        android:id="@+id/btnWeb"
        android:layout_below="@+id/btnMap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:onClick="openWeb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:layout_below="@+id/btnWeb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

</RelativeLayout>
